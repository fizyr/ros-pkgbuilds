source=("${pkgname}-${pkgver}-${_pkgver_patch}.tar.gz"::"https://github.com/ros-gbp/rqt_bag-release/archive/release/kinetic/rqt_bag/${pkgver}-${_pkgver_patch}.tar.gz")
