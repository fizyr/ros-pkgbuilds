source=("${pkgname}-${pkgver}-${_pkgver_patch}.tar.gz"::"https://github.com/ros-gbp/rqt_service_caller-release/archive/release/kinetic/rqt_service_caller/${pkgver}-${_pkgver_patch}.tar.gz")
