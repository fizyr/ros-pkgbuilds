source=("${pkgname}-${pkgver}-${_pkgver_patch}.tar.gz"::"https://github.com/ros-gbp/geometry_tutorials-release/archive/release/kinetic/turtle_tf/${pkgver}-${_pkgver_patch}.tar.gz")
