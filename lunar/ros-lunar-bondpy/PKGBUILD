pkgdesc="ROS - Python implementation of bond, a mechanism for checking when another process has terminated."
url='https://github.com/ros/bond_core'

pkgname='ros-lunar-bondpy'
pkgver='1.8.1'
_pkgver_patch=0
arch=('any')
pkgrel=1
license=('BSD')

makedepends=(
	'cmake'
	'ros-build-tools'
	'ros-lunar-catkin'
)
depends=(
	'ros-lunar-bond'
	'ros-lunar-rospy'
	'ros-lunar-smclib'
	'util-linux'
)

