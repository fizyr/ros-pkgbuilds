url='http://ros.org/wiki/rosmake'

pkgname='ros-lunar-rosmake'
pkgver='1.14.2'
_pkgver_patch=0
arch=('any')
pkgrel=1
license=('BSD')

makedepends=(
	'cmake'
	'ros-build-tools'
	'ros-lunar-catkin'
)
depends=(
	'python-rospkg'
	'ros-lunar-catkin'
)

