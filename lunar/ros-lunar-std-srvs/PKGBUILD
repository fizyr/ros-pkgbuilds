_pkgver_patch=0
arch=('any')
pkgrel=1
license=('BSD')

makedepends=(
	'cmake'
	'ros-build-tools'
	'ros-lunar-catkin'
)
depends=(
	'ros-lunar-message-generation'
	'ros-lunar-message-runtime'
)

